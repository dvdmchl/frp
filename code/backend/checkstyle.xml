<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="fileExtensions" value="java, properties, xml"/>

    <module name="TreeWalker">
        <!-- 1. Enforce explicit visibility -->
        <module name="VisibilityModifier">
            <property name="packageAllowed" value="false"/>
            <property name="protectedAllowed" value="false"/>
        </module>

        <!-- 2. Disallow public static mutable fields.
             VisibilityModifier already disallows non-final public fields. 
             So public static non-final fields are banned. -->

        <!-- 3. Disallow field injection using MatchXpath -->
        <!-- Finds variable definitions annotated with @Autowired -->
        <module name="MatchXpath">
            <property name="id" value="FieldInjection"/>
            <property name="query" value="//VARIABLE_DEF[./MODIFIERS/ANNOTATION[@text='Autowired']]"/>
        </module>

        <!-- 4. Disallow magic strings in Controller mappings and headers using MatchXpath -->
        <!-- Finds String Literals inside specific Spring/Web annotations -->
        <module name="MatchXpath">
            <property name="id" value="MagicStringInController"/>
            <property name="query" value="//ANNOTATION[./IDENT[@text='RequestMapping' or @text='GetMapping' or @text='PostMapping' or @text='PutMapping' or @text='DeleteMapping' or @text='PatchMapping' or @text='RequestHeader']]//STRING_LITERAL"/>
        </module>
    </module>
</module>
